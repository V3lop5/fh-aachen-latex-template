\newcommand{\kotlin}[1]{
  % \colorbox{gray!8}{\mintinline{kotlin}{#1}}
  \colorbox{gray!8}{\lstinline[
    language=Kotlin, 
    breaklines,
    showstringspaces=false
  ]{#1}}
} % Beispiel: \kotlin{fun asString() = this.toString()}

\newcommand{\kotlinfile}[2]{
  \ifthenelse{\equal{\textOnly}{1}}
  { 
    [kotlincode here, remove \textbackslash{}textOnly] \label{lst:#1}
  }{
    \begin{figure}[!htp]
      \centering
      % \inputminted[linenos,
      %   numbersep=5pt,
      %   frame=lines,
      %   breaklines,
      %   bgcolor=gray!8,
      %   baselinestretch=1,
      %   style=pastie, % igor % perldoc % friendly
      %   framesep=2mm]{kotlin}{attachments/code/#1}
      \lstinputlisting[
        language=Kotlin, 
        breaklines,
        backgroundcolor=\color{gray!8},
        numbers=left,
        breakatwhitespace=true,
        postbreak=\llap{\scriptsize\textcolor{blue}{$\hookrightarrow$}\kern0.25em},
        showstringspaces=false,
        numberstyle=\scriptsize,
        frame=lines]{attachments/code/#1}
      \caption{#2}
      \label{lst:#1}
    \end{figure}
  }
} % Beispiel: \kotlinfile{Example.kt}{Beispiel Code f체r xyz}

